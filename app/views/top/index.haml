%h3 Najlepsze demoty
%ul.unstyled
  - @demots.each do |demot|
    %li
      = link_to image_tag(demot.image.url), demot
      = link_to 'Edit', edit_demot_path(demot)
      = link_to 'Destroy', demot, :method => :delete, :data => { :confirm => 'Are you sure?' }
= paginate @demots 
= link_to 'New Demot', new_demot_path